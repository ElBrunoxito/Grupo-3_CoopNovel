<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Recordatorios</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px;
        }
        h1 {
            margin: 0;
        }
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }
        #reminder-list {
            list-style: none;
            padding: 0;
        }
        .reminder {
            border: 1px solid #ddd;
            margin: 10px 0;
            padding: 10px;
            background-color: #f9f9f9;
            border-radius: 5px;
        }
        .reminder h2 {
            margin: 0;
        }
        .reminder p {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <header>
        <h1>Mis Recordatorios CoopNovel</h1>
    </header>
    <div class="container">
        <h2>Nuevo Recordatorio</h2>
        <form>
            <label for="title">Título:</label>
            <input type="text" id="title" name="title">
            <br>
            <label for="description">Descripción:</label>
            <textarea id="description" name="description" rows="4"></textarea>
            <br>
            <button type="button" id="add-reminder">Agregar Recordatorio</button>
        </form>
        <h2>Recordatorios Guardados</h2>
        <ul id="reminder-list">
        </ul>
    </div>

    <script>
        document.getElementById("add-reminder").addEventListener("click", function() {
            var title = document.getElementById("title").value;
            var description = document.getElementById("description").value;

            if (title && description) {
                var reminderItem = document.createElement("li");
                reminderItem.classList.add("reminder");

                var reminderContent = `
                    <h2>${title}</h2>
                    <p>${description}</p>
                `;
                reminderItem.innerHTML = reminderContent;
                document.getElementById("reminder-list").appendChild(reminderItem);
                document.getElementById("title").value = "";
                document.getElementById("description").value = "";
            }
        });
    </script>
</body>
</html>
